<div class="container">

  <div style="display: flex; align-items:center; padding-top: 20px; justify-content: space-between;">
      <h1>Lists</h1>
      <p><%= link_to "Add a new list", new_list_path, class: "btn btn-info  " %></p>
  </div>

    <% @lists.each do |list| %>
        <%= link_to list_path(list) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, width: 2000, crop: :fill, gravity: :face if list.photo.key %>')"><h2><%= list.name %></h2> </div>
        <% end %>
    <% end %>
</div>
